                                    <TextBox Grid.Row="5" Grid.Column="3"  IsEnabled="false" IsReadOnly="True" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Report.CoolingShow}" VerticalAlignment="Center" Margin="5 0 5 0" Padding="0 4 0 4"/>
                                    <Label Content="Požadovaný výkon [%] (-4 až 100)" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Grid.ColumnSpan="2" Padding="0 2 0 2" />


        SizeChanged="Window_SizeChanged"
        mc:Ignorable="d"
        Title="Rosny bod" Height="600" Width="800" d:DesignWidth="800" MaxWidth="2000" MaxHeight="1200" Icon="Rosnybod.ico" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResize">
    <Window.Background>
        <SolidColorBrush Color="Transparent"></SolidColorBrush>
    </Window.Background>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="10"/>
    </WindowChrome.WindowChrome>

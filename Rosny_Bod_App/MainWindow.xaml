                                    <Label Content="Proud [A]" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2" />

                                    <TextBox Grid.Row="1" Grid.Column="3"  IsEnabled="false" IsReadOnly="True" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Report.AmperageShow}" VerticalAlignment="Center"  Padding="0 4 0 4" Margin="5 0 5 0" />
                                    
                                    <Label Content="Příkon [W]" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2" />
                                    <TextBox Grid.Row="3" Grid.Column="3"  IsEnabled="false" IsReadOnly="True" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="{Binding Report.WattageShow}" VerticalAlignment="Center"  Padding="0 4 0 4" Margin="5 0 5 0" />
                                    <Label Content="Trans. výkon [W]" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2"/>
                                    <TextBox Grid.Row="5" Grid.Column="3"  IsEnabled="false" IsReadOnly="True" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Report.CoolingShow}" VerticalAlignment="Center"  Padding="0 4 0 4" Margin="5 0 5 0" />
                                    <Label Grid.Row="6" Grid.Column="3" Content="Teplota chladiče [°C]" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2" />

                                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="0 4 0 4"  Grid.Row="9" Grid.Column="2" IsReadOnly="True" IsEnabled="false" TextWrapping="Wrap" x:Name="Set_Temperature" Text="{Binding RequestedValue}" Margin="10 0 10 0" Grid.ColumnSpan="2" Grid.RowSpan="2" FontSize="{Binding Controlsize3}" VerticalContentAlignment="Center" />

                                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="0 4 0 4"  Grid.Row="5" Grid.Column="0"  x:Name="Request_temperature_manual" TextWrapping="Wrap" Text="{Binding RequestedString}" IsEnabled="False" Margin="0 0 10 0" TextChanged="Request_temperature_manual_Text_Changed" IsKeyboardFocusWithinChanged="Request_temperature_manual_IsKeyboardFocusWithinChanged" />
                                    <Rectangle  Grid.Row="6" Grid.Column="0"  Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stroke="Gray" Margin="0 1 10 1" />
                                    <Label Grid.Row="6" Grid.Column="0" Content="{Binding RequestTemperatureManualText}" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 1 10 1" FontSize="9.8" />
                                    <Button Content="Potvrdit požadovanou teplotu" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ReqConfirm" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="ReqConfirm_Click" IsEnabled="False" Margin="0 2 10 2" FontSize="{Binding Controlsize2}"/>


                                    <CheckBox x:Name="Automatic_temp_control_ON" Content="Automatické řízení teploty" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" IsChecked="True" Checked="Automatic_temp_control_ON_Checked" Unchecked="Automatic_temp_control_ON_Unchecked" FontSize="{Binding Controlsize2}" IsEnabled="false"/>
                                    <Button Grid.Row="13" Grid.Column="0" x:Name="Add_row" Content="Přidat řádek" Click="Add_row_Click" Grid.ColumnSpan="2"  Margin=" 5 1 5 1" FontSize="{Binding Controlsize2}" />
                                    <Button Grid.Row="13" x:Name="Remove_row" Content="Odstranit řádek" Click="Remove_row_Click"  Grid.Column="2" Grid.ColumnSpan="2" Margin=" 5 1 5 1" FontSize="{Binding Controlsize2}" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="300" />
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>
                                    <WpfPlot x:Name="WpfPlot1" Margin="0,0,0,5" Grid.RowSpan="2"/>
                                    <ComboBox x:Name="Graph_selector_1" Grid.Row="2"  HorizontalAlignment="Left"  FontSize="{Binding Controlsize2}" Width="120" SelectionChanged="Graph_selector_1_SelectionChanged" IsEnabled="False">
                                        <ComboBoxItem Content="Teplota zrcadla" />
                                        <ComboBoxItem Content="Teplota okolí" />
                                        <ComboBoxItem Content="Atmosférický tlak" />
                                        <ComboBoxItem Content="Fotorezistor" />
                                        <ComboBoxItem Content="Proud" />
                                        <ComboBoxItem Content="Výkon" />
                                        <ComboBoxItem Content="Teplota chladiče" />
                                    </ComboBox>

                                </Grid>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <DataGrid Grid.Row="1" Height="{Binding Heightfix}" FontSize="{Binding Controlsize2}" x:Name="Auto_Messuring_Results" AutoGenerateColumns="False" ItemsSource="{Binding Record}" Margin="10,10,10,10" Padding="10,10,10,10" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Čas" Binding="{Binding Time,StringFormat=\{0:dd.MM.yy HH:mm:ss\}}" Width="160" />
                                        <DataGridTextColumn Header="Vnější teplota" Binding="{Binding ENV_Temperature}" Width="160" />
                                        <DataGridTextColumn Header="Vnitřní teplota" Binding="{Binding PT100_Temperature}"  Width="160" />
                                        <DataGridTextColumn Header="Tlak" Binding="{Binding ENV_Pressure}" Width="160" />
                                        <DataGridTextColumn Header="Vlhkost" Binding="{Binding Humidity}" Width="160" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <!--  <TabItem Header="Výsledky měření">

                    <Grid Margin="5 5 5 5 ">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height= "45*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>

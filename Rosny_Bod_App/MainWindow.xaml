                        </MenuItem>
                        <MenuItem Header="_Nápověda" Height="25"  HorizontalAlignment="Center" VerticalAlignment="Center">
                            <MenuItem Header="_Zobrazit nápovědu" Click="MenuItem_Click"/>
                            <MenuItem Header="_O programu" Click="MenuItem_Click2"/>


                        </MenuItem>
                    </Menu>
                    <TextBlock x:Name="Status" Grid.Column="4" Margin="10,0,10,0" Text="Neaktivní" Background="LightGray" IsEnabled="False" TextAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2"/>

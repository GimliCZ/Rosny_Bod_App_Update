                                    <Button Content="Spustit měření" x:Name="Auto_Messurement_Start" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Auto_Messurement_Start_Click" Grid.Column="0" Grid.Row="0" Margin="0 2 0 2" FontSize="{Binding Controlsize2}" IsEnabled="False" />
                                    <Button Content="Zastavit měření" x:Name="Auto_Messurement_Stop" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Auto_Messurement_Stop_Click" Grid.Column="0" Grid.Row="1" Margin="0 2 0 2" FontSize="{Binding Controlsize2}" IsEnabled="False" />

                                    <TextBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="0 4 0 4" IsReadOnly="True" IsEnabled="false" TextWrapping="Wrap" x:Name="CoolerTemp_auto"  Text="{Binding Report.PT100TempSence}" Margin="5 0 5 0" />
                                    <Label Grid.Column="2" Grid.Row="0" Content="Teplota zrcadla [°C]" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2"/>
                                    <Label Content="Teplota okolí [°C]" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2" />
                                    <TextBox HorizontalAlignment="Stretch" Grid.Column="2" Grid.Row="3" IsReadOnly="True" IsEnabled="false" TextWrapping="Wrap" x:Name="Envtemp_auto" Text="{Binding Report.EnvTempReport}" VerticalAlignment="Center" Padding="0 4 0 4" Margin="5 0 5 0" />
                                    <Label Content="Atmos. tlak [hPa]" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2"/>
                                    <TextBox Grid.Row="5" Grid.Column="2" IsReadOnly="True" IsEnabled="false" TextWrapping="Wrap" x:Name="Pressure_auto" Text="{Binding Report.EnvPressureReport}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="0 4 0 4" Margin="5 0 5 0" />
                                    <Label Content="Fotoresistor [mV]" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding Controlsize2}" Padding="0 2 0 2"/>
                                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="0 4 0 4"  Grid.Row="7" Grid.Column="2" IsReadOnly="True" IsEnabled="false" TextWrapping="Wrap" x:Name="Light_auto" Text="{Binding Report.LightSensorReport_mV}" Margin="5 0 5 0" />
